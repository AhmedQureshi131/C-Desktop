                    </Grid>
                </Button>
            </Grid>
        </Grid>

        <Button Content="Clear" HorizontalAlignment="Left" Margin="248,46,0,0" VerticalAlignment="Top" Width="75" Height="26" BorderBrush="{StaticResource Black}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <cal:ActionMessage MethodName="ClearPin">
                    </cal:ActionMessage>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
        <Button Content="Login" HorizontalAlignment="Left" Margin="65,353,0,0" VerticalAlignment="Top" Width="267" Height="37" BorderBrush="{StaticResource Black}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <cal:ActionMessage MethodName="Login">
                    </cal:ActionMessage>
