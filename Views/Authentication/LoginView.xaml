                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="0">
                <Button x:Name="btnThree" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Height="Auto" BorderBrush="{StaticResource Black}" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="EnterPinOne">
                                <cal:Parameter Value="3" />
                            </cal:ActionMessage>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid HorizontalAlignment="Center" Margin="0,30,0,0">
                        <TextBlock Text="3" FontSize="36" HorizontalAlignment="Stretch" TextAlignment="Left" RenderTransformOrigin="0.5,-0.111" Margin="0,-16,0,16"></TextBlock>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1">
                <Button x:Name="btnSix" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Height="Auto" BorderBrush="{StaticResource Black}" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="EnterPinOne">
                                <cal:Parameter Value="6" />
                            </cal:ActionMessage>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid HorizontalAlignment="Center" Margin="0,30,0,0">
