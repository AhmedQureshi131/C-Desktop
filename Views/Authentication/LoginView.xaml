                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="2">
                <Button x:Name="btnNine" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Height="Auto" BorderBrush="{StaticResource Black}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="EnterPinOne">
                                <cal:Parameter Value="9" />
